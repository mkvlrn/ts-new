{
  "name": "@mkvlrn/ts-new",
  "version": "0.0.0",
  "description": "A very opinionated cli tool for setting up a typescript project without frameworks/libs or using nest, vite, or next",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkvlrn/ts-new.git"
  },
  "type": "module",
  "bin": {
    "mkvlrn-ts-new": "dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "package.json",
    "readme.md"
  ],
  "scripts": {
    "test": "vitest --run",
    "test:cov": "rimraf coverage && vitest run --coverage",
    "dev": "node --import @swc-node/register/esm-register src/index.ts",
    "lint": "eslint --fix src",
    "lint-staged": "lint-staged",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "build": "rimraf dist && swc src -d dist --strip-leading-paths && chmod +x dist/index.js",
    "start": "node dist",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@mkvlrn/eslint-config": "^24.7.2",
    "@mkvlrn/prettier-config": "^24.6.7",
    "@swc-node/register": "1.10.4",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.6.13",
    "@swc/plugin-transform-imports": "^2.0.9",
    "@swc/types": "^0.1.9",
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^2.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.2"
  },
  "dependencies": {
    "@inquirer/core": "^9.0.2",
    "@inquirer/prompts": "^5.1.2",
    "adm-zip": "^0.5.14",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  }
}
